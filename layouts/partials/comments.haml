:javascript
  var xh = new XMLHttpRequest();
  xh.onreadystatechange = function() {
    if (xh.readyState == 4 && (xh.status == 200 || xh.status == 304))
      document.getElementById("comment-contents").innerHTML = xh.responseText;
  };
  xh.open("GET", "http://www.alexhornung.com/comments/site/#{@config[:domain]}/article/#{@item[:hash]}", true);
  xh.send();

  var xh2 = new XMLHttpRequest();
  xh2.onreadystatechange = function() {
    if (xh2.readyState == 4 && (xh2.status == 200 || xh2.status == 304))
      document.getElementById("captcha").innerHTML = xh2.responseText;
  };
  xh2.open("GET", "http://www.alexhornung.com/comments/site/#{@config[:domain]}/captcha", true);
  xh2.send();


%section#comments
  #comment-form
    %form{ :action => "http://www.alexhornung.com/comments/site/#{@config[:domain]}/article/#{@item[:hash]}", :method => "POST" }
      %fieldset
        %legend Post a comment
        %label{ :for => "name" } Name
        %input{ :type => "text", :name => "name" }
        %label{ :for => "email" } Email (not shown)
        %input{ :type => "text", :name => "email" }
        %label{ :for => "comment" } Comment
        %textarea{ :name => "comment" }
        #captcha
        %input.button{ :type => "submit", :value => "Post comment" }

  #comment-contents

:ruby
  pages = sorted_articles.slice(@item_id*@config[:page_size], @config[:page_size])

-#%section#posts
  %ul
    - pages.each do |article|
      %li
        %h2
          = link_to article[:title], article
        .post
          = render "partials/post-info", :item => article
          = snippet(article.compiled_content, 140) + link_to("Read moreâ€¦", article)

%section#posts
  %ul
    - pages.each do |article|
      %li
        %time.posted
          = pretty_time article[:created_at]
        %span.post-title
          = link_to article[:title], article
        - for tag in article[:tags]
          %span.post-categories
            = link_for_tag tag, "/tag/"

.pagination
  - if @item[:prev_link]
    %span.prev
      %a{ :href => @item[:prev_link] }
        Newer Entries

  - if @item[:next_link]
    %span.next
      %a{ :href => @item[:next_link] }
        Older Entries

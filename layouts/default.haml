!!!
%html
  %head
    %meta(charset="utf-8")
    %title
      = @item[:title].nil? ? "Alex Hornung" : @item[:title]
    -#%link(href="/assets/styles/1140.css" rel="stylesheet" type="text/css")
    %link(href="/assets/styles/style.css" rel="stylesheet" type="text/css")
    -#%link(href="/assets/styles/pyg_github.css" rel="stylesheet" type="text/css")
    -#%script{ :src => "/assets/js/require.js" }
    -#:javascript
      require.config({
        baseUrl: "/assets/js",
        paths: {
          "jquery"     : "jquery-1.7.2.min"
        }});
  %body
    #header.container
      .row
        #logo.twelvecol.last
          %h1.logo
            Alex Hornung
      #navbar.row
        .ninecol
          %ul#navigation-menu.menu
            - for item in @config[:menu]
              %li
                %a{ :href => item[:url] }
                  = item[:text]
        #social-nav.threecol.last
          - if @config[:github]
            %a{ :target => "_blank", :href => "https://github.com/" + @config[:github][:profile] }
              %img.icon-github{ :src => "/assets/icons/empty.gif", :alt => "GitHub" }
          - if @config[:linkedin]
            %a{ :target => "_blank", :href => "https://www.linkedin.com/in/" + @config[:linkedin][:profile] }
              %img.icon-linkedin{ :src => "/assets/icons/empty.gif", :alt => "LinkedIn" }
          - if @config[:twitter]
            %a{ :target => "_blank", :href => "https://www.twitter.com/" + @config[:twitter][:profile] }
              %img.icon-twitter{ :src => "/assets/icons/empty.gif", :alt => "Twitter" }
          - if @config[:identica]
            %a{ :target => "_blank", :href => "https://identi.ca/" + @config[:identica][:profile] }
              %img.icon-identica{ :src => "/assets/icons/empty.gif", :alt => "identi.ca" }
          - if @config[:gplus]
            %a{ :target => "_blank", :href => "https://plus.google.com/" + @config[:gplus][:profile] }
              %img.icon-gplus{ :src => "/assets/icons/empty.gif", :alt => "Google+" }
          %a{ :target => "_blank", :href => "/atom.xml" }
            %img.icon-rss{ :src => "/assets/icons/empty.gif", :alt => "Atom Feed" }

    #content.container
      .row
        .ninecol
          #main
            - unless @item[:title].nil?
              %h1
                = @item[:title]
            - if @item[:kind] == "article"
              = render "partials/post-info"
            .post-body
              = yield
            - if @item[:comments]
              = render "partials/comments"

        .threecol.last
          #sidebar
            %h3 About
            #bio
              = render "partials/bio"
            %h3 Tags
            #tag-cloud
              = render "partials/tagcloud"

    .container
      #footer.row
        .twelvecol.last
          = "Copyright (c) 2010-#{Time.now.year}, Alex Hornung"

    :javascript
      var pkBaseURL = (("https:" == document.location.protocol) ? "https://www.alexhornung.com/stats/" : "http://www.alexhornung.com/stats/");
      document.write(unescape("%3Cscript src='" + pkBaseURL + "piwik.js' type='text/javascript'%3E%3C/script%3E"));
    :javascript
      try {
        var piwikTracker = Piwik.getTracker(pkBaseURL + "piwik.php", 1);
        piwikTracker.trackPageView();
        piwikTracker.enableLinkTracking();
      } catch( err ) {}
    %noscript
      <p><img src="http://www.alexhornung.com/stats/piwik.php?idsite=1" style="border:0" alt="" /></p></noscript>
